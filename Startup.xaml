<Window x:Class="NTK.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NTK"
        mc:Ignorable="d"
        AllowsTransparency="False" 
        ShowInTaskbar="False"
        Visibility="Hidden"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Title="NTK"
        Topmost="True"
        Height="600"
        Closing="Window_Closing"
        Width="800">
    <Grid x:Name="FrameGrid">
        <Label x:Name="lblMessage"  HorizontalContentAlignment="Center" Content="Message" Margin="10,10,10,0" FontFamily="Consolas" FontSize="48" Height="83" VerticalAlignment="Top"/>
        <Label x:Name="lblShutdownTimer"  HorizontalContentAlignment="Center" Content="Timer" Margin="10,0,10,10" FontFamily="Consolas" FontSize="48" Height="83" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
